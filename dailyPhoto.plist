<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>Label</key>
    <string>skyonedot.dailycapture</string>
    
    <key>ProgramArguments</key>
    <array>
        <string>/bin/bash</string>
        <string>-c</string>
        <string>source /Users/skyone/Pictures/DailyPhoto/PY/path/to/venv/bin/activate && python3 /Users/skyone/Pictures/DailyPhoto/PY/main.py</string>
    </array>
    
    <key>EnvironmentVariables</key>
    <dict>
        <key>HOME</key>
        <string>${HOME}</string>
        <key>PATH</key>
        <!-- 注意点1. 确保ffmpeg在如下Path中 -->
        <string>/opt/homebrew/bin</string>
    </dict>

    <!-- 简化定时设置为关键时间点 -->
    <key>StartCalendarInterval</key>
    <array>
        <dict><key>Hour</key><integer>10</integer><key>Minute</key><integer>0</integer></dict>
        <dict><key>Hour</key><integer>14</integer><key>Minute</key><integer>0</integer></dict>
        <dict><key>Hour</key><integer>16</integer><key>Minute</key><integer>0</integer></dict>
        <dict><key>Hour</key><integer>20</integer><key>Minute</key><integer>0</integer></dict>
        <dict><key>Hour</key><integer>23</integer><key>Minute</key><integer>0</integer></dict>
    </array>

    <key>RunAtLoad</key>
    <true/>

    <key>StandardOutPath</key>
    <string>/Users/skyone/Pictures/DailyPhoto/dailyPhoto.log</string>
    <key>StandardErrorPath</key>
    <string>/Users/skyone/Pictures/DailyPhoto/dailyPhoto.err</string>
</dict>
</plist> 